extend ../../layouts/default

block main

  if user_role.permissions.includes("permissions-create")

    h1 Create Permission Group

    form(
        action=`${prefixAdmin}/role/create`
        method="POST"
      )
        div(class="form-group")
          label(for="title") Title 
          input(
            type="text"
            class="form-control"
            id="title"
            name="title"       
          )

        div(class="form-group")
          label(for="des") Description
          input(
            type="text"
            class="form-control"
            id="des"
            name="description"  
          )

        div(class="form-group")
          button(
            type="submit"
            class="btn btn-primary"
          ) 
  else  
    h1 You dont have permissions to access        