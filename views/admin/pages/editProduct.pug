extend ../layouts/default
include ../mixins/alert

block main
  +alertDanger(5000)
  +alertSuccess(5000)

  h1 Edit product 
  form(
    action=`${prefixAdmin}/product/edit/${product.id}?_method=PATCH`
    id="form-create-product"
    method="POST"
    enctype="multipart/form-data"
  )
    div(class="form-group")
      label(for="title") Title 
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        value=product.title
         
      )
    div(class="form-group")
      label(for="desc") Description 
      textarea(
        class="form-control textarea-mce"
        id="desc"
        name="description"
        required 
      ) !{product.description}
    div(class="form-group")
      label(for="price") Price 
      input(
        type="number"
        class="form-control"
        id="price"
        name="price"
        value=product.price
        required 
      )
    div(class="form-group")
      label(for="discount") Discount (%) 
      input(
        type="number"
        class="form-control"
        id="discount"
        name="discountPercentage"
        value= product.discountPercentage
        required 
      )
    div(class="form-group")
      label(for="stock") Stock 
      input(
        type="number"
        class="form-control"
        id="stock"
        name="stock"
        value= product.stock
        required 
      )
    div(class="form-group" upload-image) 
      label(for="thumbnail") Thumbnail 
      input(
        type="file"
        class="form-control-file"
        id="thumbnail"
        name="thumbnail"
        accept="image/*"
        upload-image-input
      )
      img(src=product.thumbnail alt="lol" upload-preview-image)
    
    div(class="form-group")
      label(for="pos") Position 
      input(
        type="number"
        class="form-control"
        id="pos"
        name="position"
        placeholder="Auto increment"
        min="1"
        value= product.position
            
      )
    
    div(class="form-group form-check form-check-inline")
       
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked= (product.status == "active" ? true : false)
        required 
      )
      label(for="statusActive") Active
    div(class="form-group form-check form-check-inline")
       
      input(
        type="radio"
        class="form-check-input"
        id="statusInactive"
        name="status"
        value="inactive"
        checked= (product.status == "active" ? false : true)
        required 
      )
      label(for="statusInactive") Inactive

    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Update
    
    