extend ../../layouts/default
include ../../mixins/alert
include ../../mixins/select-tree


block main
  +alertDanger(5000)
  +alertSuccess(5000)

  h1 Edit account 
  form(
    action=`${prefixAdmin}/account/edit/${record.id}?_method=PATCH`
    method="POST"
    enctype="multipart/form-data"
  )
    div(class="form-group")
      label(for="fullName") Full Name 
      input(
        type="text"
        class="form-control"
        id="fullName"
        name="fullName"
        value=record.fullName
        required      
      )

    div(class="form-group")
      label(for="password") Password 
      input(
        type="password"
        class="form-control"
        id="password"
        name="password"       
         
      )    
       
    div(class="form-group")
      label(for="email") Email 
      input(
        type="text"
        class="form-control"
        id="email"
        name="email" 
        value=record.email      
      )

    div(class="form-group")
      label(for="phone") Phone number 
      input(
        type="text"
        class="form-control"
        id="phone"
        name="phone"
        value=record.phone        
      )

    div(class="form-group" upload-image) 
      label(for="avatar") Avatar 
      input(
        type="file"
        class="form-control-file"
        id="avatar"
        name="avatar"
        accept="image/*"
        upload-image-input
      )
      img(src=record.avatar alt="lol" upload-preview-image)

    div(class="form-group")
      label(for="role_id") Authorize 
      select(name="role_id" id="role_id" class="form-control" required)
        option(value="" disabled selected) --Choose--
        if roles 
          each item in roles
            option(value=item.id selected=(item.id == record.role_id)) #{item.title}       
    
    div(class="form-group form-check form-check-inline")
       
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked=(record.status == "active")
        required 
      )
      label(for="statusActive") Active
    div(class="form-group form-check form-check-inline")
       
      input(
        type="radio"
        class="form-check-input"
        id="statusInactive"
        name="status"
        value="inactive"
        checked=(record.status == "inactive")
        required 
      )
      label(for="statusInactive") Inactive

    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Edit
    
    