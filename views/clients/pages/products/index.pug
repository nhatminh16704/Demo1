extends ../../layouts/default

block main
  .container.my-3 
    .row  
      .col-12 
        .box-head 
          h2.inner-title Product List
    .row 
      each item in product 
        .col-3.mb-3 
          .product-item 
            .inner-image 
              img(src=item.thumbnail ,alt="image here")
            .inner-content 
              h3.inner-title
                a(href=`products/${item.slug}`) #{item.title}
              .inner-price-new  #{item.priceNew}$
              .inner-price-old  #{item.price}$
              .inner-discount #{item.discountPercentage}%
            